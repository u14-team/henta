{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib/",
    "esModuleInterop": true,
    "types": ["node"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@app/*": ["src/*"]
    }
  },
}
